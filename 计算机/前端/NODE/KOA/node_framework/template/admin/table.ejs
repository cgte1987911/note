<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <style media="screen">
    .dialog-panel {position:fixed; left: 50%; top: 200px; width: 500px; margin-left:-250px; z-index:99;display:none}
    .dialog-shadow {position:fixed; left: 0; top:0; width:100%; height:100%; background:#000; opacity:0.3; z-index:98;display:none}
    </style>

    <script>
        window.onload=function(){
            let oBtn=document.querySelector('#btn_add')
            let oShadow=document.querySelector('#shadow')
            let oDialog=document.querySelector('#dialog')
            let oCancel=document.querySelector('#btn_cancel')
            let oClose=document.querySelector('#btn_close')

            oBtn.onclick=function(){
                oShadow.style.display='block'
                oDialog.style.display='block'
            }
            oCancel.onclick=oClose.onclick=function(){
                oShadow.style.display='none'
                oDialog.style.display='none'
            }
        }
    </script>
</head>

<body>
    <button type="button" class="btn btn-default" id="btn_add">添加</button>

    <div class="dialog-shadow" id="shadow"></div>
    <div class="panel panel-default dialog-panel" id="dialog">
        <div class="panel-heading">
            <h2 class="panel-title">
                添加
                <a href="#" class="glyphicon glyphicon-remove pull-right" id="btn_close"></a>
            </h2>
        </div>
        <div class="panel-body">
            <!--内容-->
            <form action="/admin/banner" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">标题</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="请输入用标题">
                </div>
                <div class="form-group">
                    <label for="text">副标题</label>
                    <input type="text" class="form-control" id="sub_title" name="sub_title" placeholder="请输入副标题">
                </div>
                <div class="form-group">
                    <label for="image">副标题</label>
                    <input type="file" class="form-control" id="image" name="images" multiple="multiple">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="">添加</button>
                    <button type="button" class="btn btn-default" id="btn_cancel">取消</button>
                </div>
            </form>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" name="" value="">
                </th>
                <th>ID</th>
                <th>标题</th>
                <th>副标题</th>
                <th>图片</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <%datas.forEach(data=>{%>
            <tr>
                <td>
                    <input type="checkbox" name="" value="">
                </td>
                <td><%=data.ID%></td>
                <td><%=data.title%></td>
                <td><%=data.sub_title%></td>
                <td><%=data.images%></td>
                <td>
                    <button type="button" class="btn btn-default">修改</button>
                    <button type="button" class="btn btn-danger">删除</button>
                </td>
            </tr>
            <%})%>
        </tbody>
    </table>
    <nav>
        <ul class="pagination">
            <li>
                <a href="#">
                    <span>&laquo;</span>
                </a>
            </li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li>
                <a href="#">
                    <span>&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</body>

</html>